<Window x:Class="WpfApp3.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="_Plik">
                <MenuItem Header="Zapisz"></MenuItem>
                <MenuItem Header="Otworz">
                    <MenuItem Header="Otworz tekst"></MenuItem>
                    <MenuItem Header="Otworz Data"></MenuItem>
                </MenuItem>
                <MenuItem Header="Nowy"></MenuItem>
                <Separator/>
                <MenuItem Header="Zamknij"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Formatowanie">
                <MenuItem Header="Dzien/Noc" IsCheckable="True" IsChecked="true"></MenuItem>
            </MenuItem>
            <MenuItem Header="Po_moc" Click="infoP">
                <MenuItem Header="Informacje o programie"></MenuItem>
                <MenuItem Header="Informacje o autorze"></MenuItem>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
